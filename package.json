{
    "name": "@lumina-auth/monorepo",
    "private": true,
    "scripts": {
        "build": "pnpm run clean && pnpm -r build",
        "test": "pnpm -r test",
        "clean": "pnpm -r clean",
        "version:patch": "changeset version --snapshot patch",
        "version:minor": "changeset version --snapshot minor",
        "version:major": "changeset version --snapshot major",
        "publish": "pnpm run build && changeset publish",
        "publish:patch": "pnpm run version:patch && pnpm run publish",
        "publish:minor": "pnpm run version:minor && pnpm run publish",
        "publish:major": "pnpm run version:major && pnpm run publish"
    },
    "devDependencies": {
        "@changesets/cli": "^2.27.11",
        "@types/node": "^22.10.5",
        "typescript": "^5.7.2"
    }
}